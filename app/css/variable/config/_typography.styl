$v-font =  'Myriad Pro', sans-serif

typeSize(fontSm,font)
	+below(768px)
		font-size font px
	font-size fontSm px

.type--xs
	typeSize(12,10)

.type--sm
	typeSize(14,12)

.type--main
	typeSize(20,15)

.type--md
	typeSize(24,16)

.type--lg
	typeSize(30,18)

.type--xl
	typeSize(40,28)

.type--bold
	font-weight bold

h1
	@extend .type--xl
	color #212121
h2
	@extend .type--lg
	color #212121
h3
	@extend .type--main
	color #212121
h4
	@extend .type--sm
	color #212121
h5
	@extend .type--xs
	color #212121

a
	color $link-color
	text-decoration: none
	&:hover
		color darken($link-color,20)
	&:visiter
		color darken($link-color,30)

p
	@extend .type--main

.link--mark
	color $blue
	&:hover
		color darken($mark,20)
	&:visiter
		color darken($mark,30)

.link--main
	color $link-color
	hover-underline($link-color)
	&:hover
		color darken($link-color,20)
	&:visiter
		color darken($link-color,30)

.link--text
	color $link-color
	text-decoration underline
	&:hover
		text-decoration none
