@import 'rupture'
@import "variable/_function.styl"
@import "variable/_fonts.styl"
@import "variable/_ie.styl"
@import "variable/_helper.styl"
@import "variable/_default.styl"
@import "variable/config/_color.styl"
@import "variable/config/_typography.styl"
@import "variable/config/_btn.styl"
@import "variable/config/_input.styl"
@import "../module/**/*"

body
	@extend .type--main
	font-family $v-font
	color $main-text
	line-height 1.2
	letter-spacing 0.01em
	background: #f9f9fb
.main-cont
	center(1500px,10px)


//убираем выделения активности при клике
.slick-slide
	&:hover
		outline none!important
	&:active
		outline none!important
	&:focus
		outline none!important

//for custom navigation
.slider-control
	flex(mid)
	tr(all)
	size 40px
	background: $red
	position: absolute
	top 50%
	margin-top: -40px
	z-index 10
	cp()
	&:hover
		background: $red
		.icon
			fill white
	.icon
		size 14px
		fill white

.slider-control--left
	left 0
.slider-control--right
	right 0

//Внешний вид пагинации
.slick-dots
	li
		button:before
			font-size: 12px
			border 1px solid white
			opacity 1

.slick-dots
	width: 100%
	bottom 30px
	.slick-active
		background: $red
		round()
		border-radius 0
		color $red
		button:before
			opacity 1
			color $red!important

.slick-dotted.slick-slider
	margin-bottom: 0

.slider__el
	bg-full()
	padding: 19.5% 10%

.slider-wrap
	position: relative
	overflow: hidden
.header
	f()
	align-items: center
	background: $dark
	height: 55px
.logo
	display: inline-block
	margin-right: 30px
.header__slogan
	up()
	@extend .type--sm
	letter-spacing 2.8px
	color white
.menu
	f()
	margin-left: auto
.menu__el
	@extend .type--sm
	up()
	tr(all)
	padding: 25px
	color white
	&:hover
		background: $red
		color white
.menu__el--active
	background: $red
	color white

.box
	position: absolute
	width: 100%
	background: #212429
	height 345px

.advant
	padding:20px 30px
	background: #f7f7f7
	flex(between)
	margin-bottom: 60px
.advant__text
	@extend .type--main
	font-weight 700
	text-transform uppercase
	color #212121
	line-height: 1.6
.advant-list
	flex(between)
	width: 70%
.advant-list__el
	flex(mid)
	width: 30%
.advant-list__el-icon
	size 50px
	flex(mid)
	background: $red
	margin-right: 10px
	br(5px)
	.icon
		size 40px
		fill white
.advant-list__el-text
	up()
	width:calc(100% - 60px)
	font-size: 14px
	font-weight: 700
	line-height: 1.6
.banner
	bg-full()
	background-size: contain

.content
	padding: 50px
	ul
		line-height: 1.6
		li
			margin-bottom: 10px
.content--white
	background: white

.content--gray
	background: #f1f1f1

.content-title
	@extend .type--lg
	font-weight 700
	letter-spacing 1.8px
	color #212121
	up()
	margin-bottom: 50px

.read-more-wrap
	flex(mid)
	margin-top: 50px
.read-more
	@extend .type--sm
	up()
	display: inline-block
	padding: 5px 20px
	color #212121
	letter-spacing 2.8px
	border-left 1px solid $border-color
	border-right 1px solid $border-color

select.select-beauty
	display: none!important

.element-select
	padding: 20px 0

.nice-select:active, .nice-select.open, .nice-select:focus
	border 1px solid $border-color

.nice-select
	br(5px)
	display: block
	color #999999
	font-size 14px
	height: 50px
	line-height: 50px
	&.open
		border-radius 5px 5px 0 0
	.list
		width: calc(100% )
		left 0px
		border-radius 0 0 5px 5px
		border 0px solid $border-color
		border-top 0
		margin-top: 0
		color $black
		li
			white-space: nowrap
			overflow: hidden
			text-overflow: ellipsis

.filter-wrap
	padding: 60px 30px
	margin: 60px 0
	box-shadow 0 0 0 rgba(232, 232, 232, 0.11)
	border 1px solid rgba(221, 221, 221, 0.15)
	background-color #f7f7f7
.filter__title
	@extend .type--lg
	font-weight 700
	text-transform uppercase
	color $black
	text-align: center
	margin-bottom: 70px
.filter-list
	flex(between)
	margin-bottom: 30px
.filter-el
	width: 24%
	.nice-select
		width: 100%
.filter-el__name
	up()
	font-size: 15px
	margin-bottom: 20px
	font-weight: 700
//.filter-el__select
//.select-beauty
.filter-footer
	flex(between)
.filter-info
	@extend .type--sm
	color #999999
.filter-get
	@extend .btn--md
	@extend .btn--mark
	width: 24%

.subscribe
	box-shadow 0 0 0 rgba(232, 232, 232, 0.11)
	border 1px solid rgba(221, 221, 221, 0.15)
	background-color #f7f7f7
	padding: 25px 30px
	flex(between)
	margin: 60px 0
.subscribe-title
	color $black
	@extend .type--main
	font-weight 700
	up()
	width: 15%
	line-height: 1.3
.subscribe-form
	flex(between)
	width: 75%
	input
		width: 32%

.subscribe-form__get
	@extend .btn--md
	@extend .btn--dark


.footer
	padding: 15px
	background: $black
	text-align: center
	@extend .type--sm
	up()
	span
		opacity 0.4
		color white
		letter-spacing 1.4px
	a
		color white
		text-decoration: underline

.bread
	+below(640px)
		display: none
	f()
	fw()
	margin-bottom: 40px
.bread__el
	margin-right: 25px
	margin-bottom: 10px
	position: relative
	@extend .type--sm
	opacity .5
	up()
	tr(all)
	&:hover
		opacity:1
	&:after
		content '|'
		position: absolute
		right: -17px
		top 0
	&:last-child
		&:after
			content ''
			display: none
		pointer-events none
		opacity: 1

//.edge
.edge__el
	f()
	align-items: center
	margin-bottom: 10px
.edge__el-icon
	size 60px
	flex(mid)
	background: $red
	margin-right: 30px
	br(5px)
	.icon
		size 40px
		fill white
//.icon
.edge__el-text
	width calc(100% - 80px)